<UserControl x:Class="DeepGo_App.MenuLeft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepGo_App"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <UniformGrid Rows="2" Columns="2">
        <Button x:Name="btnLoad"  Content="Load"  Style="{StaticResource BtnBase}"  Click="btnClick" />
        <Button x:Name="btnReset" Content="Reset" Style="{StaticResource BtnBase}"  Click="btnClick" />
        <Button x:Name="btnSave" Content="Save"   Style="{StaticResource BtnBase}"  Click="btnClick" />
        <Button x:Name="btnHide" Content="Hide"   Style="{StaticResource BtnBase}"  Click="btnClick" />
    </UniformGrid>
</UserControl>
