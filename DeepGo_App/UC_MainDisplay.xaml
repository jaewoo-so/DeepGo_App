<UserControl x:Class="DeepGo_App.UC_MainDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepGo_App"
             mc:Ignorable="d" 
             d:DesignHeight="3508" d:DesignWidth="2480" Width="2480" Height="3508">
    <DockPanel Name="dckPanel" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Border CornerRadius="6" BorderThickness="2" BorderBrush="RoyalBlue" DockPanel.Dock="Top" >
            <Grid>
                <Canvas Grid.Column="0" ClipToBounds="True" Margin="15" >
                    <Canvas.Background>
                        <ImageBrush x:Name="imgMap" Stretch="Uniform"  RenderOptions.BitmapScalingMode="Fant"   />
                    </Canvas.Background>
                </Canvas>
                <Canvas Name="cvsMap" Grid.Column="0" Margin="15" />
            </Grid>
        </Border>
    </DockPanel>
</UserControl>
